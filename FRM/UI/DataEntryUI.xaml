<Window x:Class="FRM.DataEntryUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FRM"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Title="Factory Reject Management" Height="319" Width="300" ResizeMode="CanMinimize" FontSize="14" Background="#04c582">

    <Border Background="Black" CornerRadius="20" Margin="20">
        <StackPanel Margin="20,20,20,5">
            <Label x:Name="label" Content="Scan Barcode" Margin="0" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <TextBox x:Name="textBox" Background="#545d6a" Foreground="White" FontSize="18" HorizontalContentAlignment="Center" KeyDown="textBox_KeyDown" TextChanged="textBox_TextChanged"/>
            <Button x:Name="button" Content="Submit" Margin="0,20,0,20" Height="50" Background="#545d6a" Foreground="White" FontSize="18" IsEnabled="False" Click="button_Click"/>
            <Button x:Name="button1" Content="Back" Margin="55,13,55,0" Background="#60656C" Opacity="0.75" Foreground="White" FontSize="18" Click="button1_Click"/>
        </StackPanel>
        
    </Border>
    
</Window>
