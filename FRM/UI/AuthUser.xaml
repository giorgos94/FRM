<Window x:Class="FRM.AuthUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FRM"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
 
        Title="Login" Height="319" Width="300" ResizeMode="NoResize" FontSize="14" Background="#04c582">

    <Border Background="Black" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label x:Name="login" Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <TextBlock x:Name="textBlock" Text="Username:" Foreground="White"/>
            <TextBox x:Name="textBox" TextAlignment="Center" Background="#545d6a" Foreground="White" FontSize="18"/>
            <TextBlock x:Name="textBlock_Copy" Text="Password:" Foreground="White"/>
            <PasswordBox x:Name="passwordBox" HorizontalContentAlignment="Center" Background="#545d6a" Foreground="White" FontSize="18" KeyDown="passwordBox_KeyDown"/>
            <Button x:Name="button" Content="Login" Margin="60, 10" Background="#545d6a" Foreground="White" FontSize="18" IsEnabled="True" Click="button_Click"/>
        </StackPanel>
    </Border>




</Window>
